@model MovieGenreViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4">Movie List</h1>
    <a asp-controller="Movies"asp-action="Create">Create New Movie</a>
    <form asp-controller="Movies" asp-action="Index" method="GET"> 
        <p>
            <div class="form-group">
            <select class="form-control" asp-for="MovieGenre" asp-items="Model.Genres">
                <option value="">All</option>
            </select>
            </div>
            Title: <input class="form-control" asp-for="searchString" name="searchString" type="text">
            <button class="btn btn-primary" type="submit">Filter</button>
        </p>
    </form>
    <table class="table"> 
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Movies[0].Title)</th>
                <th>@Html.DisplayNameFor(model => model.Movies[0].ReleaseDate)</th>
                <th>@Html.DisplayNameFor(model => model.Movies[0].Genre)</th>
                <th>@Html.DisplayNameFor(model => model.Movies[0].Price)</th>
                <th>@Html.DisplayNameFor(model => model.Movies[0].Rating)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Movies)
            {
               <tr>
                   <td>@Html.DisplayFor(modelItem => item.Title)</td>
                   <td>@Html.DisplayFor(modelItem => item.ReleaseDate)</td>
                   <td>@Html.DisplayFor(modelItem => item.Genre)</td>
                   <td>@Html.DisplayFor(modelItem => item.Price)</td>
                   <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                   <td>
                       <a asp-controller="Movies"asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                       <a asp-controller="Movies"asp-action="Show" asp-route-id="@item.Id">Show</a> |
                       <a asp-controller="Movies"asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                   </td>
               </tr> 
            }
        </tbody>
    </table>
</div>